{
    "name": "josegus/control-code",
    "description": "Generate invoice's control code according to bolivian laws",
    "keywords": [
        "gustavo vasquez",
        "control-code"
    ],
    "homepage": "https://github.com/josegus/control-code",
    "license": "MIT",
    "authors": [
        {
            "name": "Gustavo Vasquez",
            "email": "jgvv15@gmail.com",
            "homepage": "https://gustavovasquez.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^8.0|^9.5",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Josegus\\ControlCode\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Josegus\\ControlCode\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
